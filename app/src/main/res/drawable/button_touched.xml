<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/purple"/> <!-- Changing the solid color -->
    <corners android:radius="12dp"/> <!-- Rounding the corners -->
    <stroke
        android:width="4dp"
        android:color="@color/gold"/> <!-- Thicker gold-colored stroke -->
    <padding
        android:bottom="12dp"
        android:left="24dp"
        android:right="12dp"
        android:top="12dp"/> <!-- Adjusted padding -->

    <!-- Adding a gradient to the shape -->
    <gradient
        android:angle="45"
        android:startColor="@color/yellow"
        android:endColor="@color/orange"/>
</shape>
