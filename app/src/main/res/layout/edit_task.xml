<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTask"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="402dp"
        android:layout_height="31dp"
        android:hint="Enter/Edit Task Details"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/editN"
        android:layout_width="414dp"
        android:layout_height="77dp"
        android:background="@drawable/background"
        android:hint="Task Name"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.052" />

    <EditText
        android:id="@+id/editD"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@drawable/background"
        android:ems="10"
        android:hint="Task Description"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.376" />

    <EditText
        android:id="@+id/editD2"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:background="@drawable/background"
        android:ems="10"
        android:hint="Task Notes"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.777" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/background"
        android:max="2"
        android:progress="1"
        app:layout_constraintBottom_toTopOf="@+id/editD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editN"
        app:layout_constraintVertical_bias="0.461" />

    <ImageButton
        android:id="@+id/saveTask"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/googleg_standard_color_18"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editD"
        app:layout_constraintVertical_bias="0.909"
        android:contentDescription="TODO" />


</androidx.constraintlayout.widget.ConstraintLayout>